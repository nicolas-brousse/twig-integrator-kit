{
    "name": "nicolas-brousse/twig-integrator-kit",
    "description": "A minimalist application to make integration with twig",
    "license": "MIT",
    "type": "project",

    "authors": [
        {
            "name": "Nicolas Brousse",
            "email": "pro@nicolas-brousse.fr"
        }
    ],

    "require": {
        "php": ">=5.3.3",

        "silex/silex": "~1.1",
        "mheap/Silex-Assetic": "~1.0",
        "twig/twig": ">=1.8,<2.0-dev",
        "symfony/twig-bridge": "~2.3",
        "symfony/filesystem": "~2.3",

        "leafo/scssphp": "dev-master",
        "leafo/scssphp-compass": "dev-master",
        "leafo/lessphp": "~0.4",
        "coffeescript/coffeescript": "~1.3"
    },

    "scripts": {
        "post-install-cmd": "TwigIntegratorKit\\Composer\\Script::install",
        "post-update-cmd": "TwigIntegratorKit\\Composer\\Script::install"
    },

    "autoload": {
        "psr-0": {
            "": "lib/"
        }
    }
}
